@using GameWebsite.Web.ViewModels.Game
@model AddGameCommentViewModel
@{
    ViewData["Title"] = "Commenting";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddComment" method="post">
            <div class="mb-2">
                <label asp-for="@Model.Text" class="form-label-add-edit">Comment</label>
                <textarea asp-for="@Model.Text" class="form-control" aria-required="true" rows="2"></textarea>
                <span asp-validation-for="@Model.Text" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.GameId"/>
            <button type="submit" class="btn btn-success mt-2">Send</button>
        </form>
    </div>
</div>