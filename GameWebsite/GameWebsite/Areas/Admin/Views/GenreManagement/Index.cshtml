@model IEnumerable<GameWebsite.Web.Areas.Admin.ViewModels.GenreViewModel>

<div class="container mt-5">

    <h1 class="text-center mb-4">Genre Management</h1>

    <a asp-area="Admin" asp-controller="GenreManagement" asp-action="Add" class="btn btn-primary mt-auto w-100" style="margin-bottom: 20px">
        <i class="fas fa-plus"></i>
        <h2>Add Genre</h2>
    </a>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.GenreName</td>
                    <td>
                        <a asp-action="Edit" asp-controller="GenreManagement" asp-area="Admin" asp-route-id="@genre.Id" class="btn btn-warning btn-sm d-inline"><i class="fas fa-plus"></i>Edit</a>

                        <a asp-action="Delete" asp-controller="GenreManagement" asp-area="Admin" asp-route-id="@genre.Id" method="post" class="btn btn-danger btn-sm d-inline" style="margin-bottom: 6px" onclick="return confirm('Are you sure you want to delete this genre?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
