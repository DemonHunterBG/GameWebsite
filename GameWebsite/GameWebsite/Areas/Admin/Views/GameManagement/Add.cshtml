@using GameWebsite.Web.ViewModels.AdminViewModels;
@model AddGameViewModel
@{
    ViewData["Title"] = "Add Game";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div>
                <label asp-for="@Model.Name" class="form-label-add-edit">Game name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="@Model.GameURL" class="form-label-add-edit">Game URL</label>
                <input asp-for="@Model.GameURL" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.GameURL" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="@Model.ImageURL" class="form-label-add-edit">Image URL</label>
                <input asp-for="@Model.ImageURL" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImageURL" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="2"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success mt-2">Add Game</button>
        </form>
    </div>
</div>